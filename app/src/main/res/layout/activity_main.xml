<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/quantity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quantity_title"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@id/quantity_text_view"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/default_android_margin"
        android:paddingStart="@dimen/default_android_padding"
        android:paddingEnd="@dimen/default_android_padding"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quantity_title"
        app:layout_constraintBottom_toTopOf="@id/btn_order"
        app:layout_constraintTop_toBottomOf="@id/quantity_title"
        android:paddingStart="@dimen/default_android_padding"
        android:paddingEnd="@dimen/default_android_padding"
        android:layout_marginTop="@dimen/default_android_margin"
        android:text="@string/quantity_text_view"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quantity_text_view"
        app:layout_constraintTop_toBottomOf="@id/quantity_text_view"
        app:layout_constraintBottom_toTopOf="@id/btn_order"
        android:layout_marginStart="@dimen/default_android_padding"
        android:layout_marginEnd="@dimen/default_android_padding"
        android:layout_marginTop="@dimen/default_android_margin"
        android:background="@color/gray_700"
        android:text="@string/button_text"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>