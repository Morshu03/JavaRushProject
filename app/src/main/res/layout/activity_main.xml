<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/quantity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/quantity_text_margin"
        android:layout_marginVertical="@dimen/default_android_margin"
        android:padding="@dimen/default_android_padding"
        android:text="@string/quantity_title"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@id/quantity_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quantity_title"
        android:layout_margin="@dimen/default_android_margin"
        android:padding="@dimen/default_android_padding"
        android:text="@string/quantity_text_view"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/btn_minus"
        app:layout_constraintTop_toBottomOf="@id/quantity_title" />

    <ImageButton
        android:id="@+id/shop_btn"
        android:layout_width="@dimen/button_plus_minus_size"
        android:layout_height="@dimen/button_plus_minus_size"
        app:layout_constraintTop_toBottomOf="@id/quantity_text_view"
        app:layout_constraintStart_toStartOf="@id/quantity_text_view"
        app:layout_constraintEnd_toEndOf="@id/quantity_text_view"
        android:layout_margin="@dimen/default_android_margin"
        android:src="@drawable/img_462520"
        android:background="@null"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"/>

    <Button
        android:id="@+id/btn_plus"
        android:layout_width="@dimen/button_plus_minus_size"
        android:layout_height="@dimen/button_plus_minus_size"
        android:layout_below="@id/quantity_title"
        android:layout_margin="@dimen/default_android_margin"
        android:background="@color/gray_700"
        android:text="@string/button_plus_text"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/quantity_text_view"
        app:layout_constraintTop_toBottomOf="@id/quantity_title" />

    <Button
        android:id="@+id/btn_minus"
        android:layout_width="@dimen/button_plus_minus_size"
        android:layout_height="@dimen/button_plus_minus_size"
        android:layout_below="@id/quantity_title"
        android:layout_margin="@dimen/default_android_margin"
        android:background="@color/gray_700"
        android:padding="@dimen/default_android_padding"
        android:text="@string/button_minus_text"
        android:textColor="@color/white"
        app:layout_constraintRight_toLeftOf="@id/quantity_text_view"
        app:layout_constraintTop_toBottomOf="@id/quantity_title" />


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/teal_200"
        android:elevation="6dp"
        android:translationZ="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
</androidx.constraintlayout.widget.ConstraintLayout>