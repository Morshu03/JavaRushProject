<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/quantity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/default_android_padding"
        android:paddingTop="@dimen/default_android_padding"
        android:text="@string/quantity_title"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quantity_title"
        android:paddingStart="@dimen/default_android_padding"
        android:paddingTop="@dimen/default_android_padding"
        android:text="@string/quantity_text_view"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btn_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quantity_text_view"
        android:layout_marginStart="@dimen/default_android_margin"
        android:layout_marginTop="@dimen/default_android_margin"
        android:background="@color/gray_700"
        android:onClick="submitOrder"
        android:text="@string/button_text" />
</RelativeLayout>